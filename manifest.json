{
  "manifest_version": 2,

  "name": "Aria2 Download",
  "description": "Download everything via aria2",
  "version": "0.1.0",
  "icons": {
      "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon_disable.png"
  },
  "permissions": [
    "downloads",
    "storage",
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "jquery.min.js",
      "jquery.jsonrpc.js",
      "background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "chrome_style": true,
    "page": "option.html"
  }
}
